<hc:Window
    x:Class="MaaWpfGui.Views.UI.AchievementListWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:c="clr-namespace:CalcBinding;assembly=CalcBinding"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    Title="成就列表"
    Width="600"
    Height="400"
    MinWidth="250">
    <Grid>
        <ListBox
            ItemsSource="{Binding Achievements}"
            ScrollViewer.HorizontalScrollBarVisibility="Disabled"
            Style="{DynamicResource NoSelectedHighlightListBoxStyle}"
            VirtualizingPanel.ScrollUnit="Pixel">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <VirtualizingStackPanel Margin="8" HorizontalAlignment="Left">
                        <TextBlock
                            FontWeight="Bold"
                            Text="{Binding Title}"
                            TextWrapping="Wrap" />
                        <TextBlock
                            Foreground="{DynamicResource TraceLogBrush}"
                            Text="{Binding Description}"
                            TextWrapping="Wrap" />
                        <TextBlock
                            Foreground="{DynamicResource InfoLogBrush}"
                            Text="{Binding Conditions}"
                            TextWrapping="Wrap" />
                        <ProgressBar
                            Width="200"
                            Height="12"
                            BorderThickness="1"
                            Maximum="{Binding Target}"
                            Minimum="0"
                            Visibility="{c:Binding '!IsUnlocked and IsProgressive'}"
                            Value="{Binding Progress}" />
                        <TextBlock
                            Text="{Binding UnlockedTimeLocal, StringFormat=解锁于：{0:G}}"
                            TextWrapping="Wrap"
                            Visibility="{c:Binding IsUnlocked}" />
                    </VirtualizingStackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</hc:Window>
