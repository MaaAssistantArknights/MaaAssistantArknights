<hc:Window
    x:Class="MaaWpfGui.Views.UI.ProcessPickerWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    Title="{DynamicResource ProcessPickerTitle}"
    Width="520"
    Height="400"
    Background="{DynamicResource RegionBrush}"
    WindowStartupLocation="CenterOwner">
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ListBox
            DisplayMemberPath="Display"
            ItemsSource="{Binding Items}"
            SelectedItem="{Binding Selected, Mode=TwoWay}" />

        <StackPanel
            Grid.Row="1"
            Margin="0,8,0,0"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                Width="80"
                Margin="0,0,8,0"
                Click="BtnRefresh_Click"
                Content="{DynamicResource ProcessPickerRefresh}" />
            <Button
                Width="80"
                Margin="0,0,8,0"
                Click="BtnOk_Click"
                IsDefault="True"
                Content="{DynamicResource ProcessPickerConfirm}" />
            <Button
                x:Name="BtnCancel"
                Width="80"
                IsCancel="True"
                Content="{DynamicResource ProcessPickerCancel}" />
        </StackPanel>
    </Grid>
</hc:Window>
