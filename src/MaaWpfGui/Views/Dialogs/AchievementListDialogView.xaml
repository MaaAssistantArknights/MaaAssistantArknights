<hc:Window
    x:Class="MaaWpfGui.Views.Dialogs.AchievementListDialogView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:c="clr-namespace:CalcBinding;assembly=CalcBinding"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:helper="clr-namespace:MaaWpfGui.Helper"
    xmlns:uiBehaviors="clr-namespace:MaaWpfGui.Extensions.UIBehaviors"
    Title="{DynamicResource AchievementList}"
    Width="600"
    Height="400"
    MinWidth="300"
    Background="{DynamicResource MdXamlBackground}">
    <Grid>
        <ListBox
            Margin="0,0,10,0"
            Background="{DynamicResource MdXamlBackground}"
            BorderThickness="0"
            ItemsSource="{Binding VisibleAchievements.Values, Source={x:Static helper:AchievementTrackerHelper.Instance}}"
            ScrollViewer.HorizontalScrollBarVisibility="Disabled"
            Style="{DynamicResource NoSelectedHighlightListBoxStyle}"
            VirtualizingPanel.ScrollUnit="Pixel">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid Visibility="{c:Binding 'IsUnlocked or !IsHidden'}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Path
                            Width="40"
                            Height="40"
                            uiBehaviors:ResourceReferenceHelper.FillResourceKey="{Binding MedalBrushKey}"
                            Data="{DynamicResource HangoverGeometry}"
                            Stretch="Uniform" />
                        <VirtualizingStackPanel Grid.Column="1" Margin="8">
                            <VirtualizingStackPanel
                                HorizontalAlignment="Left"
                                Background="{DynamicResource MdXamlBackground}"
                                Orientation="Horizontal">
                                <TextBlock
                                    FontWeight="Bold"
                                    Foreground="{DynamicResource MessageLogBrush}"
                                    Text="{Binding Title}"
                                    TextWrapping="Wrap" />
                                <TextBlock Text=" (NEW)" Visibility="{c:Binding IsNewUnlock}" />
                            </VirtualizingStackPanel>
                            <TextBlock
                                Foreground="{DynamicResource TraceLogBrush}"
                                Text="{Binding Description}"
                                TextWrapping="Wrap" />
                            <Grid HorizontalAlignment="Left">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Foreground="{DynamicResource InfoLogBrush}"
                                    Text="{Binding Conditions}"
                                    TextWrapping="Wrap" />
                                <TextBlock
                                    Grid.Column="1"
                                    Margin="5,0,0,0"
                                    VerticalAlignment="Center"
                                    Foreground="{DynamicResource InfoLogBrush}"
                                    Opacity="0.7"
                                    Visibility="{c:Binding '!IsUnlocked and IsProgressive'}">
                                    <TextBlock.Text>
                                        <MultiBinding StringFormat="{}({0:F0}/{1:F0})">
                                            <Binding Path="Progress" />
                                            <Binding Path="Target" />
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>
                            </Grid>
                            <ProgressBar
                                Width="200"
                                Height="12"
                                HorizontalAlignment="Left"
                                BorderThickness="1"
                                Maximum="{Binding Target}"
                                Minimum="0"
                                Visibility="{c:Binding '!IsUnlocked and IsProgressive'}"
                                Value="{Binding Progress}" />
                            <VirtualizingStackPanel Orientation="Horizontal" Visibility="{c:Binding IsUnlocked}">
                                <TextBlock
                                    uiBehaviors:ResourceReferenceHelper.ForegroundResourceKey="{Binding MedalBrushKey}"
                                    Text="{DynamicResource AchievementUnlockedAt}"
                                    TextWrapping="Wrap" />
                                <TextBlock
                                    uiBehaviors:ResourceReferenceHelper.ForegroundResourceKey="{Binding MedalBrushKey}"
                                    Text="{Binding UnlockedTimeLocal, StringFormat={}{0:G}}"
                                    TextWrapping="Wrap" />
                            </VirtualizingStackPanel>
                        </VirtualizingStackPanel>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
            <ListBox.ItemContainerStyle>
                <Style BasedOn="{StaticResource TransparentListBoxItemStyle}" TargetType="ListBoxItem">
                    <Setter Property="Background" Value="{DynamicResource MdXamlBackground}" />
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}" />
                            <Setter Property="Background" Value="{DynamicResource MdXamlBackground}" />
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{DynamicResource MdXamlBackground}" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </ListBox.ItemContainerStyle>
        </ListBox>
        <hc:SearchBar
            MinWidth="200"
            Margin="25,5"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Background="{DynamicResource MouseOverRegionBrushOpacity75}"
            Command="{Binding SearchCmd, Source={x:Static helper:AchievementTrackerHelper.Instance}}"
            CommandParameter="{Binding Text, RelativeSource={RelativeSource Self}}"
            IsRealTime="True" />
    </Grid>
</hc:Window>
