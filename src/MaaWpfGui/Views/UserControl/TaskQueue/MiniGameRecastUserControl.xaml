<UserControl
    x:Class="MaaWpfGui.Views.UserControl.TaskQueue.MiniGameRecastUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="clr-namespace:MaaWpfGui.ViewModels.UserControl.TaskQueue"
    d:DataContext="{d:DesignInstance {x:Type ui:MiniGameRecastUserControlModel}}"
    d:DesignHeight="400"
    d:DesignWidth="600"
    mc:Ignorable="d">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="60"/>
                <ColumnDefinition Width="6"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="{DynamicResource MiniGame@CoppersRecastMetric}" VerticalAlignment="Center" Margin="5,0" FontWeight="Bold"/>
            <TextBlock Grid.Column="1" Text="{DynamicResource MiniGame@CoppersRecastComparator}" VerticalAlignment="Center" Margin="5,0" FontWeight="Bold"/>
            <TextBlock Grid.Column="2" Text="{DynamicResource MiniGame@CoppersRecastThreshold}" VerticalAlignment="Center" Margin="5,0" FontWeight="Bold"/>
            <Button
                Grid.Column="3"
                Width="30"
                Height="30"
                HorizontalAlignment="Center"
                Command="{x:Static ui:MiniGameRecastUserControlModel.AddRecastConditionCommand}"
                Content="+" />
        </Grid>
        <!-- Separator -->
        <Separator Grid.Row="1" Margin="0,-5,0,5"/>
        <ListView
            Grid.Row="2"
            ItemsSource="{Binding RecastConditions}"
            SelectedItem="{Binding SelectedRecastCondition, Mode=TwoWay}"
            BorderThickness="0"
            Background="Transparent"
            HorizontalContentAlignment="Stretch"
            ScrollViewer.VerticalScrollBarVisibility="Visible">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="Padding" Value="0"/>
                    <Setter Property="Margin" Value="0"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Background" Value="Transparent"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#10888888"/>
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="#20888888"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="0,4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="60"/>
                        </Grid.ColumnDefinitions>
                        <ComboBox Grid.Column="0"
                                  ItemsSource="{x:Static ui:MiniGameRecastUserControlModel.RecastMetricList}"
                                  SelectedValue="{Binding Metric, UpdateSourceTrigger=PropertyChanged}"
                                  SelectedValuePath="Value"
                                  Margin="2,0"/>
                        <ComboBox Grid.Column="1"
                                  ItemsSource="{x:Static ui:MiniGameRecastUserControlModel.RecastComparatorList}"
                                  SelectedValue="{Binding Comparator, UpdateSourceTrigger=PropertyChanged}"
                                  SelectedValuePath="Value"
                                  Margin="2,0"/>
                        <hc:NumericUpDown Grid.Column="2"
                                          Minimum="0"
                                          Maximum="2100000000"
                                          Value="{Binding Threshold, UpdateSourceTrigger=PropertyChanged}"
                                          Margin="2,0"/>
                        <Button Grid.Column="3"
                                Width="30"
                                Height="30"
                                HorizontalAlignment="Center"
                                Command="{Binding DataContext.RemoveRecastConditionCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                CommandParameter="{Binding}"
                                Content="x" />
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</UserControl>
