<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style
        x:Key="CustomListBoxItemStyle"
        BasedOn="{StaticResource ListBoxItemBaseStyle}"
        TargetType="{x:Type ListBoxItem}">
        <Setter Property="Padding" Value="10,0,0,0" />
        <Style.Triggers>
            <Trigger Property="IsSelected" Value="true">
                <Setter Property="Background" Value="{DynamicResource TransparentRegionBrush}" />
                <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style BasedOn="{StaticResource ListBoxBaseStyle}" TargetType="{x:Type ListBox}">
        <Setter Property="Background" Value="{DynamicResource TransparentRegionBrush}" />
    </Style>

    <Style
        x:Key="TransparentListBoxItemStyle"
        BasedOn="{StaticResource CustomListBoxItemStyle}"
        TargetType="{x:Type ListBoxItem}">
        <Setter Property="Background" Value="{DynamicResource TransparentRegionBrush}" />
    </Style>
</ResourceDictionary>
